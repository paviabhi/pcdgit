#include<stdio.h>
int main()
 {
   int n,reverse=0,temp;
    printf("enter the number to reverse\n");
    scanf("%d",&n);
    temp=n;
      while(temp!=0)
      {
          reverse=reverse*10;
          reverse=reverse+temp%10;
        temp=temp/10;
      }
    printf("the reverse of the entered number is =%d\n",reverse);
      if(n==reverse)
    printf("%d is a palindrome\n",reverse);
    else
     printf("%d is not a palindrome\n",reverse);
    return 0;
 }
